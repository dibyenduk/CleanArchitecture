                    </div>
                </div>
            </footer>*@
                <div class="footer">
                    <div class="card">
                        <div class="card-footer text-muted">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-sm-4"><small>Copyright © XXXX-XXXX. All rights reserved.</small></div>
                                    <div class="col-sm-8"><small class="float-right"><b>Build:</b> 0.0.0.1<b> Database:</b> localhost\Database<b> Server:</b> Server1<b> Language:</b> en-US</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/assets/app/scripts/vendor/select2/js/select2.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#sidebarCollapse').on('click', function (e) {
                e.preventDefault();
                var siteWrapper = '#main', showNavClass = 'show-nav';

                if ($(siteWrapper).hasClass(showNavClass)) {
                    $(siteWrapper).removeClass(showNavClass);
                } else {
                    $(siteWrapper).addClass(showNavClass);
                }
            });
        });
    </script>
    <script data-main='@VirtualPathUtility.ToAbsolute("~/assets/app/scripts/app.js")' src='@VirtualPathUtility.ToAbsolute("~/assets/app/scripts/vendor/require.js")'></script>
    @RenderSection("scripts", required: false)
</body>
</html>